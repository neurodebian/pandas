From abba6318cf525ae56e49f16dd2b8131cca5355dc Mon Sep 17 00:00:00 2001
From: Jeff Tratner <jeffrey.tratner@gmail.com>
Date: Fri, 3 Jan 2014 22:57:22 -0800
Subject: [PATCH 2/2] remove explicit truediv kwarg

---
 pandas/computation/expressions.py | 5 ++---
 pandas/core/ops.py                | 4 ++--
 2 files changed, 4 insertions(+), 5 deletions(-)

diff --git a/pandas/computation/expressions.py b/pandas/computation/expressions.py
index f423bf9..663d95b 100644
--- a/pandas/computation/expressions.py
+++ b/pandas/computation/expressions.py
@@ -89,7 +89,7 @@ def _can_use_numexpr(op, op_str, a, b, dtype_check):
     return False
 
 
-def _evaluate_numexpr(op, op_str, a, b, raise_on_error=False, truediv=True,
+def _evaluate_numexpr(op, op_str, a, b, raise_on_error=False,
                       **eval_kwargs):
     result = None
 
@@ -100,8 +100,7 @@ def _evaluate_numexpr(op, op_str, a, b, raise_on_error=False, truediv=True,
             result = ne.evaluate('a_value %s b_value' % op_str,
                                  local_dict={'a_value': a_value,
                                              'b_value': b_value},
-                                 casting='safe', truediv=truediv,
-                                 **eval_kwargs)
+                                 casting='safe', **eval_kwargs)
         except ValueError as detail:
             if 'unknown type object' in str(detail):
                 pass
diff --git a/pandas/core/ops.py b/pandas/core/ops.py
index 72d4604..32b4af3 100644
--- a/pandas/core/ops.py
+++ b/pandas/core/ops.py
@@ -56,7 +56,7 @@ def _create_methods(arith_method, radd_func, comp_method, bool_method,
         mul=arith_method(operator.mul, names('mul'), op('*'),
                          default_axis=default_axis),
         truediv=arith_method(operator.truediv, names('truediv'), op('/'),
-                             truediv=True, fill_zeros=np.inf,
+                             fill_zeros=np.inf,
                              default_axis=default_axis),
         floordiv=arith_method(operator.floordiv, names('floordiv'), op('//'),
                               default_axis=default_axis, fill_zeros=np.inf),
@@ -73,7 +73,7 @@ def _create_methods(arith_method, radd_func, comp_method, bool_method,
         rsub=arith_method(lambda x, y: y - x, names('rsub'),
                           default_axis=default_axis),
         rtruediv=arith_method(lambda x, y: operator.truediv(y, x),
-                              names('rtruediv'), truediv=True,
+                              names('rtruediv'),
                               fill_zeros=np.inf, default_axis=default_axis),
         rfloordiv=arith_method(lambda x, y: operator.floordiv(y, x),
                                names('rfloordiv'), default_axis=default_axis,
-- 
